{% layout "layout.liquid" %}
{% block content %}
    <div class="container-md">
        <article>
            <h2>{{bread.name}}</h2>
            <h4>Our {{bread.name}} is a delicious
                {% if bread.isVegan %}
                vegan
                {% else %}
                enriched
                {% endif %}
                {% if bread.isYeasted %}
                bread
                {% else %}
                sourdough bread
                {% endif %}
                with {{bread.specialIngredients}}.
            </h4>
            <h5>Purchase a loaf for ${{bread.price}}.</h5>
            {% if bread.owner == userId %}
                <div class="btn-group">
                    <a class="btn btn-primary" href="/breads/edit/{{bread.name}}">Edit</a>
                    <form action="/breads/{{bread.name}}?_method=DELETE" method="POST">
                        <input class="btn btn-danger" type="submit" value="delete">
                    </form>
                </div>
            {% endif %}
        </article>
    </div>
{% endblock %}