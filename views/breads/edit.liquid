{% layout "layout.liquid" %}
{% block content %}  
  <div class="container-sm">   
    <form action="/breads/{{bread.name}}?_method=PUT" method="POST">
      <fieldset>
        <legend>Edit
          {{bread.name}}
        </legend>
        <label class="form-label">Name:</label>
        <input class="form-control mb-4" type="text" name="name" value="{{bread.name}}">
        <label class="form-label">Price:</label>
        <input class="form-control mb-4" type="number" name="price" min="1" max="200" value="{{bread.price}}" >
        <label class="form-label">Special Ingredients:</label>
        <input class="form-control mb-4" type="text" name="specialIngredients" value="{{bread.specialIngredients}}" >
        <label class="form-label">Is the bread Vegan?:</label>
        <input class="form-check-input mb-4" type="checkbox" name="isVegan"
        {% if bread.isVegan %}
        checked
        {% endif %}
        >
        <label class="form-label">Is the bread Yeasted?:</label>
        <input class="form-check-input mb-4" type="checkbox" name="isYeasted"
        {% if bread.isYeasted %}
        checked
        {% endif %}
        >
      </fieldset>
      <input class="btn btn-success" type="submit" value="Edit {{bread.name}}">
    </form>
  </div>

{% endblock %}