{% layout "layout.liquid" %}
{% block content %}
  <div class="container-sm">
    <form action="/cakes/{{cake.name}}?_method=PUT" method="POST">
      <fieldset>
        <legend>Edit {{cake.name}}</legend>
        <label class="form-label">Name:</label>
        <input class="form-control mb-4" type="text" name="name" value="{{cake.name}}" required>
        <label class="form-label">Price:</label>
        <input class="form-control mb-4" type="number" name="price" min="1" max="200" value="{{cake.price}}" required>
        <label class="form-label">Sponge flavour:</label>
        <input class="form-control mb-4" type="text" name="sponge" value="{{cake.sponge}}" required>
        <label class="form-label">Frosting:</label>
        <input class="mb-4"  list="frostings" name="frosting" value="{{cake.frosting}}"  required>
          <datalist id="frostings">
              <option value="vanilla buttercream"></option>
              <option value="cream cheese frosting"></option>
              <option value="chocolate frosting"></option>
              <option value="glaze"></option>
              <option value="ganache"></option>
              <option value="none"></option>
          </datalist>
        <br>
        <label class="form-label">Is there a filling?</label>
        <input class="form-check-input mb-4" type="checkbox" name="hasFilling"
        {% if cake.hasFilling %}
        checked
        {% endif %}
        >
      </fieldset>
      <input class="btn btn-success" type="submit" value="Edit Cake">
    </form>
  </div>

{% endblock %}