{% layout "layout.liquid" %}
{% block content %}
  <div class="container-sm">
    <form action="/cakes" method="POST">
      <fieldset>
        <legend>Create New Cake</legend>
        <label class="form-label">Name:</label>
        <input class="form-control mb-4" type="text" name="name" placeholder="name of the cake" required>
        <label class="form-label">Price:</label>
        <input class="form-control mb-4" type="number" name="price" min="1" max="200" required>
        <label class="form-label">Sponge flavour:</label>
        <input class="form-control mb-4" type="text" name="sponge" placeholder="flavour of sponge" required>
        <label class="form-label">Frosting:</label>
        <input class="mb-4" list="frostings" name="frosting" required>
          <datalist id="frostings">
              <option value="vanilla buttercream"></option>
              <option value="cream cheese frosting"></option>
              <option value="chocolate frosting"></option>
              <option value="glaze"></option>
              <option value="ganache"></option>
              <option value="none"></option>
          </datalist>
        <br>
        <label class="form-label">Is there a filling?</label>
        <input class="form-check-input mb-4" type="checkbox" name="hasFilling">
      </fieldset>
      <input class="btn btn-success" type="submit" value="Create Cake">
    </form>
  </div>

{% endblock %}}}